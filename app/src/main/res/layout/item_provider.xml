<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        style="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/lblProviderName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:text="{Name}"/>

    <GridLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4">

        <TextView
            style="@style/listLabels"
            android:layout_row="0"
            android:layout_column="0"
            android:textStyle="bold"
            android:text="Remaining:"/>
        <TextView
            android:id="@+id/lblRemaining"
            android:layout_row="0"
            android:layout_column="1"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="{Remaining Units}"/>

        <TextView
            style="@style/listLabels"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Fare:"/>
        <TextView
            android:id="@+id/lblFare"
            android:layout_row="1"
            android:layout_column="1"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="{Fare}"/>

        <TextView
            style="@style/listLabels"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Last Used:"/>
        <TextView
            android:id="@+id/lblLastUsed"
            style="@style/listLabels"
            android:layout_row="2"
            android:layout_column="1"
            android:text="{YYYYMMDD HH:mm"/>

        <Button
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_column="2"
            android:layout_gravity="right|center_vertical"
            android:text="Use"
            />


    </GridLayout>

</LinearLayout>